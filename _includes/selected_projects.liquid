{% assign sorted_projects = site.projects | sort: "importance" %}
{% if page.selected_projects_limit %}
  {% assign project_limit = page.selected_projects_limit %}
{% else %}
  {% assign project_limit = 99 %}
{% endif %}
<div class="publications">
  <ol class="bibliography">
    {% for project in sorted_projects limit: project_limit %}
      <li>
        <div class="abbr">
          <span class="badge badge-primary">{{ forloop.index }}</span>
        </div>
        <div class="content">
          <div class="title">
            <a href="{% if project.redirect %}{{ project.redirect }}{% else %}{{ project.url | relative_url }}{% endif %}">{{ project.title }}</a>
          </div>
          <div class="author">
            {{ project.description }}
          </div>
        </div>
      </li>
    {% endfor %}
  </ol>
</div>
